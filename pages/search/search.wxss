page{
  padding: 20rpx;
  background-color: #fff;
}
.search{
  height: 60rpx;
  display: flex;
}

.search_input{
  height: 100%;
  flex: 7;
  border: solid 1rpx black;
  border-radius: 10rpx;
  padding-left: 10rpx;
  background-color: #fff;
  margin-right: 15rpx;
}
button{
  height: 100%;
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search_content{
  margin-top: 30rpx;
  height: 60rpx;
}
.search_item{
  border-bottom: solid 1rpx #dedede;
  height: 100%;
}